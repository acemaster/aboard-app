<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ListDetails" >

    <TextView
        android:id="@+id/namelisttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/telnolisttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/namelisttxt"
        android:layout_below="@+id/namelisttxt"
        android:layout_marginTop="20dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/callnow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telnolisttxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_blue_back"
        android:text="Get The Ride"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/mapit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/callnow"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_back"
        android:text="Show On Map"
         android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/nooftxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Did You Get The Ride?"
       
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/yes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nooftxt"
        android:layout_below="@+id/nooftxt"
        android:layout_marginTop="23dp"
         android:background="@drawable/btn_blue_back"
        android:textColor="#ffffff"
        android:text="Yes" />

    <Button
        android:id="@+id/no"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/nooftxt"
        android:background="@drawable/btn_red"
        android:layout_alignTop="@+id/yes"
        android:textColor="#ffffff"
        android:text="No" />

</RelativeLayout>